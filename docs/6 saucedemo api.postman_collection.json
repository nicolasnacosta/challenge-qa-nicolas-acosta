  "item": [
    {
      "name": "obtener access token",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));\r",
              "\r",
              "if (pm.response.status === 200) {\r",
              "    pm.collectionVariables.set(\"access_token\", pm.response.json().access_token);\r",
              "}"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\r\n    \"username\": \"standard_user\",\r\n    \"password\": \"secret_sauce\"\r\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "https://saucedemo.com/ms-seguridad/login",
          "protocol": "https",
          "host": [
            "saucedemo",
            "com"
          ],
          "path": [
            "ms-seguridad",
            "login"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Obtener producto mediante id",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));\r",
              "\r",
              "const reesponseBody = pm.response.json();\r",
              "\r",
              "pm.test(\"Response body contains the expected product name\", () => {\r",
              "    pm.expect(reesponseBody.name).to.eql(\"Sauce Labs Fleece Jacket\");\r",
              "});"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{access_token}}",
              "type": "string"
            }
          ]
        },
        "method": "GET",
        "header": [
          {
            "key": "",
            "value": "",
            "type": "text",
            "disabled": true
          }
        ],
        "url": {
          "raw": "https://saucedemo.com/products?id=5",
          "protocol": "https",
          "host": [
            "saucedemo",
            "com"
          ],
          "path": [
            "products"
          ],
          "query": [
            {
              "key": "id",
              "value": "5"
            }
          ]
        }
      },
      "response": []
    }
  ]
